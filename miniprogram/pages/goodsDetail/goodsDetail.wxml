<view class="detail_swiper">
  <swiper autoplay  indicator-dots circular>
    <swiper-item wx:for="{{goodsObj.pics}}" wx:key="pics_id" bindtap="handlePrevewImage" data-url="{{item.pics_mid}}">
      <image src="{{item.pics_mid}}" mode="widthFix"></image>
    </swiper-item>
  </swiper>
</view>
<view class="goods_price">￥{{goodsObj.goods_price}}</view>
<view class="goodsinfo">
  <view class="goods_name">{{goodsObj.goods_name}}</view>
  <view class="collect">
    <text class="iconfont icon-shoucang"></text>
    <view class="txt">收藏</view>
  </view>
</view>
<view class="goods_info">
  <view class="info_title">图文详情</view>
  <view class="info_cnt">
    <rich-text nodes="{{goodsObj.goods_introduce}}"></rich-text>
  </view>
</view>
<view class="btm_tool">
  <view class="tool_item">
    <view class="iconfont icon-kefu"></view>
    <view>客服</view>
    <button open-type="contact"></button>
  </view>
  <view class="tool_item">
    <view class="iconfont icon-yixianshi-"></view>
    <view>分享</view>
    <button open-type="share"></button>
  </view>
  <view class="tool_item" bindtap="toCar">
    <view class="iconfont icon-gouwuche"></view>
    <view>购物车</view>
  </view>
  <view class="tool_item cart" bindtap="addCar">
    <view>加入购物车</view>
  </view>
  <view class="tool_item buy">
    <view>立即购买</view>
  </view>
</view>