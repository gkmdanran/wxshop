page,.cates{
  width: 100%;
  height: 100%;
}
.content{
  height: calc(100% - 90rpx);
  display: flex;
}
.left{
  width: 25%;
  height: 100%;
}
.right{
  width: 75%;
  height: 100%;
}
.menuitem{
  height:70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  margin-top: 15rpx;
  text-align: center;
}
.activeitem{
  border-left: 6rpx solid var(--themeColor);
  color: var(--themeColor);
}
.menuitem:last-child{
  margin-bottom: 15rpx;
}

.goods_title {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 36rpx;
  color: #ccc;
}
.goods_title text{
  color: #000;
  padding: 0 20rpx;
  font-size: 32rpx;
}
.goods_group{
  padding: 20rpx 20rpx 0 20rpx;
}
.goods_list{
  display: flex;
  flex-wrap: wrap;
}
.goods {
  width: 33.3%;
  padding: 30rpx;
  text-align: center;
}
.goods image{
  width: 100%;
}
