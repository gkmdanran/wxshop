page{
  width: 100%;
  height: 100%;
}
.goodlist{
  width: 100%;
  height: 100%;
}
.goods_item{
  display: flex;
  border-bottom: 2rpx solid #ccc;
  padding: 20rpx 0;
  height: 240rpx;
}
.goods_img_wrap{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_img_wrap image {
  width: 70%;
}
.goods_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding-right: 20rpx;
}   
.goods_price {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--themeColor);
}
.usertabs{
  height: calc(100% - 90rpx);
}